<Application
    x:Class="WinverUWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinverUWP">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls"/>
            </ResourceDictionary.MergedDictionaries>
            
            <x:Double x:Key="TitleBarHeight">32</x:Double>

            <Thickness x:Key="TitleBarLeftMargin">12,0,0,0</Thickness>

            <Style x:Key="InactivatedAppTitle" TargetType="TextBlock" BasedOn="{StaticResource CaptionTextBlockStyle}">
                <Setter Property="Foreground" Value="{ThemeResource TextFillColorDisabledBrush}"/>
            </Style>

            <Style x:Key="ActivatedAppTitle" TargetType="TextBlock" BasedOn="{StaticResource CaptionTextBlockStyle}">
                <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
